{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Debug Neck",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/tools/neck/neck",
        "args": ["-m","${workspaceFolder}/external/custom-coreutils/src/wc.ll", "-c", "${workspaceFolder}/config/cmd-tool-config.json","--function-local-points-to-info-wo-globals"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }   
    ]
}